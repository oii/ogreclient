# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "macos-sierra"

  config.vm.provider "vmware_fusion" do |v|
    v.vmx["memsize"] = "2048"
    v.vmx["numvcpus"] = "2"
    v.gui = true
  end

  # salt shared dir in /tmp
  config.vm.synced_folder "/tmp", "/tmp/host_machine"
end
